<main>
    <div class="container">
        <div id="appendCategoria" class="row top-100px">
            <div class="col s10 m5 l4 push-s1 push-m1">
                <a href="admin//cadastroCategoria">
                    <div id="addCategoria" class="card card-cat">
                        <div class="card-content">
                            <span class="card-title">
                                <i class="fas fa-plus fa-5x"></i>
                            </span>
                            <blockquote>
                                {{descricao}}
                            </blockquote>
                        </div>                        
                        <div class="card-action waves-effect">
                            Adiconar Categoria
                        </div>
                    </div>
                </a>
            </div>
            {{#each categorias}}
            <div class="col s10 m5 l4 push-s1 push-m1">
                <div class="card card-cat">
                    <div class="card-content">
                        <div>
                            <a class="btn-floating btn red r-45deg right" href="admin/deletar/{{id}}">
                                <i class="fas fa-plus"></i>
                            </a>
                            <a class="btn-floating btn orange darken-3 right" href="/admin/voidProdByCat/{{titulo}}" class="btn">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a class="btn-floating btn orange darken-3 right" href="/admin/editCategoria/{{id}}" class="btn">
                                <i class="fas fa-pen"></i>
                            </a>
                        </div>
                        <span class="card-title">
                            
                            <b>{{titulo}}</b>
                        </span>
                        <blockquote>
                            {{descricao}}
                        </blockquote>
                    </div>
                    <a href="/showCategoria/{{titulo}}">
                        <div class="card-action waves-effect">
                            Abrir
                        </div>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>



