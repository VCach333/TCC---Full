<main>
    {{#each categoria}}
    <div class="container">
        <div class="row">
            <div class="col s10 m6 push-s1 push-m3">
                <form action="/admin/updateCat/{{id}}" method="POST">
                    <div class="input-field col s12">
                        <input value="{{titulo}}" id="titulo" name="titulo" type="text">
                        <label for="titulo">Título</label>
                    </div>
                    <div class="input-field col s12">
                        <input value="{{descricao}}" id="descricao" name="descricao" type="text">
                        <label for="descricao">Descrição</label>
                    </div>
                    <div class="col s12" style="justify-items: center;">
                        <button class="btn w-100 green" type="submit">Atualizar Categoria</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    {{/each}}
</main>

