<main>
    <div class="container">
        <div class="row">
            <div class="col s10 m6 push-s1 push-m3">
                <form action="./addProd" method="POST" enctype="multipart/form-data">
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Imagem</span>
                            <input name="img" type="file" accept="image/*">
                        </div>
                        <div class="file-path-wrapper">
                            <input name="imgText" class="file-path validate" type="text">
                        </div>
                    </div>                   
                    <div class="input-field col s8">
                        <input id="nome" name="nome" type="text">
                        <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="preco" name="preco" type="number">
                        <label for="preco">Preço</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="descricao" name="descricao" type="text">
                        <label for="descricao">Descrição</label>
                    </div>
                    <div class="input-field col s12">
                        <select name="categoria">
                            <option value=" " disabled selected>Escolha a Categoria deste Produto</option>
                            {{#each categorias}}
                            <option value="{{titulo}}">{{titulo}}</option>
                            {{/each}}
                        </select>
                        <label>Categoria</label>
                    </div>
                    <div class="col s12">
                        <button class="btn w-100 green" type="submit">Cadastrar Produto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>